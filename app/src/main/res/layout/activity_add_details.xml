<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.payment.AddDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <View
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/purple_500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_driverDetailHeading"
            android:layout_width="305dp"
            android:layout_height="34dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:text="@string/tv_driverDetailHeading"
            android:textColor="#00008C"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/tv_addDriverDetails"
            android:layout_width="237dp"
            android:layout_height="48dp"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="0dp"
            android:text="@string/tv_addDriverDetails"
            android:textColor="#00008C"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_cardNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/tv_enterDriverName"
                    android:textColor="#121111"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_FullName"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/et_text"
                    android:textColorHint="#90080809"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_enterEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/tv_enterEmail"
                    android:textColor="#121111"
                    android:textSize="17sp" />


                <EditText
                    android:id="@+id/et_driverEmail"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/et_email"
                    android:textColorHint="#90080809"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_enterNIC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/tv_enterNIC"
                    android:textColor="#121111"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_driverNIC"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="NIC Number"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/et_driverNIC"
                    android:textColorHint="#90080809"
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_driverDetails"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="20dp"
            android:text="Enter Driving License Details"
            android:textColor="#00008C"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_margin="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:contentPadding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <TextView
                android:id="@+id/tv_drivingLicensePoint2"
                android:layout_width="352dp"
                android:layout_height="28dp"
                android:text="@string/tv_drivingLicensePoint2"
                android:textColor="#F44336"
                android:textSize="16dp"
                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="164dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/driver" />


            <Button
                android:id="@+id/btn_chooseFromGallery"
                android:layout_width="175dp"
                android:layout_height="35dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="16dp"
                android:background="#E203A9F4"
                android:text="ADD IMAGE"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_LicenseNumber"
                    android:layout_width="292dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/tv_enterLicenseNumber"
                    android:textColor="#121111"
                    android:textSize="18sp"
                    android:typeface="sans"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.319"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_chooseFromGallery" />


                <EditText
                    android:id="@+id/et_drivingLicense"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="B355807"
                    android:inputType="textPersonName"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/et_reservationCode"
                    android:textColorHint="#90080809"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_enterExpiryDate"
                    android:layout_width="291dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/tv_enterExpiryDate"
                    android:textColor="#121111"
                    android:textSize="18sp"
                    android:typeface="sans"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.316"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_drivingLicense" />

                <EditText
                    android:id="@+id/et_expiryDate"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="21/07/2022"
                    android:inputType="textPersonName"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColorHint="#90080809"
                    android:textSize="16sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/btn_save"
            android:layout_width="175dp"
            android:layout_height="45dp"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="72dp"
            android:background="@drawable/rounded_corner"
            android:text="@string/btn_driLicenseContinue"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            />


    </LinearLayout>


</ScrollView>